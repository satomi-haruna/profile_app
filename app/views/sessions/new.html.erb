<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>

      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label "パスワード" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "ログインする", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>